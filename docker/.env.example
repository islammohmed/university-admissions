# Docker Environment Variables
# Copy this file to .env and fill in your actual values

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# Email Configuration (for NotificationService)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_NAME=University Admissions System
EMAIL_FROM_ADDRESS=noreply@university.edu
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# JWT Configuration (must be same across all services)
JWT_KEY=YourSuperSecretKeyThatIsAtLeast32CharactersLong!
JWT_ISSUER=UniversityAdmissionsIdentityService
JWT_AUDIENCE=UniversityAdmissionsClients
