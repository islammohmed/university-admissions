{
  "info": {
    "name": "University Admissions System",
    "description": "API collection for testing the University Admissions System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "applicantId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Applicant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"applicant@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"fullName\": \"John Doe\",\n  \"role\": 0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register Faculty Manager",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"manager@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"fullName\": \"Jane Manager\",\n  \"role\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"applicant@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Applicants",
      "item": [
        {
          "name": "Create Applicant",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"applicantId\", jsonData.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"birthDate\": \"2000-01-15T00:00:00Z\",\n  \"gender\": 0,\n  \"citizenship\": \"USA\",\n  \"phoneNumber\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/applicants",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applicants"]
            }
          }
        },
        {
          "name": "Get Applicant",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/applicants/{{applicantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applicants", "{{applicantId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Admissions",
      "item": [
        {
          "name": "Create Admission - Computer Science",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"applicantId\": \"{{applicantId}}\",\n  \"educationProgramId\": \"e1111111-1111-1111-1111-111111111111\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admissions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admissions"]
            }
          }
        },
        {
          "name": "Get Admissions by Applicant",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admissions/applicant/{{applicantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admissions", "applicant", "{{applicantId}}"]
            }
          }
        },
        {
          "name": "Update Admission Status (Manager)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"admissionId\": \"ADMISSION_ID_HERE\",\n  \"newStatus\": 1,\n  \"managerId\": \"MANAGER_ID_HERE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admissions/ADMISSION_ID_HERE/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admissions", "ADMISSION_ID_HERE", "status"]
            }
          }
        }
      ]
    }
  ]
}
